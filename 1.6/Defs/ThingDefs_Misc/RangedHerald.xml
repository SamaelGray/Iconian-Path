	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Iconian_Gun_Mace</defName>
		<label>Mace of Defiler</label>
		<description>An elegant instrument of destruction, Looks heavy but can be lifted by a human child, with onboard spatial and graviometric manipulators to contain and direct large amount of anti-proton directionally, also Serves as an excellent melee weapon.</description>
		<techLevel>Ultra</techLevel>
		<graphicData>
			<texPath>Things/Weapons/Weapons_Humanlike/Melee_Mace</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.25,1.25)</drawSize>
		</graphicData>
		<soundInteract>Interact_ChargeRifle</soundInteract>
		<statBases>
			<WorkToMake>57000</WorkToMake>
			<Mass>6.0</Mass>
			<AccuracyTouch>0.8</AccuracyTouch>
			<AccuracyShort>0.75</AccuracyShort>
			<AccuracyMedium>0.65</AccuracyMedium>
			<AccuracyLong>0.6</AccuracyLong>
			<RangedWeapon_Cooldown>0.55</RangedWeapon_Cooldown>
		</statBases>
		<equippedAngleOffset>45</equippedAngleOffset>
		<recipeMaker>
			<researchPrerequisite>ChargedShot</researchPrerequisite>
			<recipeUsers Inherit="false">
				<li>FabricationBench</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<Steel>40</Steel>
			<Plasteel>80</Plasteel>
			<ComponentIndustrial>6</ComponentIndustrial>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Iconian_Bullet_ShotgunBlast</defaultProjectile>
				<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
				<burstShotCount>3</burstShotCount>
				<warmupTime>1.2</warmupTime>
				<range>16.9</range>
				<soundCast>Iconian_ShotDC</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>6</muzzleFlashScale>
			</li>
		</verbs>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<weaponTags>
			<li>Iconian_SpacerRanged</li>
		</weaponTags>
		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>50</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

